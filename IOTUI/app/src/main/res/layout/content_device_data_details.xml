<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cs523team4.iotui.DeviceDataDetails"
    tools:showIn="@layout/activity_device_data_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data sharing" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list_view_sharing_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage details" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/view_data_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DeviceDetailsItem"
            android:drawableStart="@drawable/ic_storage_black_24dp"/>
        <TextView
            android:id="@+id/view_date_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DeviceDetailsItem"
            android:drawableStart="@drawable/ic_date_range_black_24dp"/>
        <TextView
            android:id="@+id/view_data_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DeviceDetailsItem"
            android:drawableStart="@drawable/ic_data_usage_black_24dp"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
